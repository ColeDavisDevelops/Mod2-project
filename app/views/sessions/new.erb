
<%= render "home/header" %>
<h1>Login!</h1>
<div style="margin:auto;width:50%;text-align:center">
<%= form_with model: @user, method: :post, url: "/login" do |f| %>
  
  <h3 style="margin-bottom:0px"><%= f.label :name %><br></h3>
  <%= f.text_field :name, style: 'width: 60%'%>
  <br>  
  <h3 style="margin-bottom:0px"><%= f.label :password %><br></h3>
  <%= f.password_field :password, style: 'width: 60%'%>
  <br>
  <h3><%= f.submit "Login", style: 'width: 60%;background-color:white;border: solid 2px'%></h3>
<% end %>
<p style="color:red;text-align:center">
<% if flash[:errors] %>
<%= flash[:errors] %>
<% end %> 
</p>
<br>
<h4><%= link_to "Create New User", "/users/new" %></h4>
</div>
