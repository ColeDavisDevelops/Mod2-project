<% if flash[:errors] %>
<%= flash[:errors] %>
<% end %> 

<%= form_with model: @user, method: :post, url: "/login" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>  
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Login" %>

<% end %>

<%= link_to "Create New User", "/users/new" %>

