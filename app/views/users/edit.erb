<%= render "home/header" %>

<div style="margin:auto;width:50%;text-align:center">

<h1> change your profile </h1>
<%= form_with model: @user do |f| %>
  <h4 style="margin-bottom:0px"><%= f.label :name %></h4>
  <%= f.text_field :name, style: 'width: 60%;margin-bottom:10px' %>
  <br>  
  <h4 style="margin-bottom:0px"><%= f.label :bio %></h4>
  <%= f.text_field :bio, style: 'width: 60%;margin-bottom:10px' %>
  <br>
  <h4 style="margin-bottom:0px"><%= f.label :profile_img_url %></h4>
  <%= f.text_field :profile_img_url, style: 'width: 60%;margin-bottom:10px' %>
  <br>
  <%= f.submit style: 'width:60%;margin-bottom:10px;border: solid 2px;background-color:white;margin-top:20px' %>

<% end %>

<%= form_with model: @user, method: :delete do |f| %>
  <%= f.submit "delete account", style: 'width:60%;margin-bottom:10px;border: solid 2px;background-color:white;margin-top:20px' %>
<% end %>

</div>

<p style="color:red;">
  <% if flash[:errors] %>
    <%= flash[:errors] %>
  <% end %>
</p>